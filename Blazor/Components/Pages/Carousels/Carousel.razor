@page "/carousel"
@namespace Blazor.Components.Pages.Carousels

<PageTitle>Carousels</PageTitle>

<h1>Carousel Gallery</h1>

@if (car.Images != null)
{
    <div class="carousel-gallery">
        <section class="carousel-section">
            <CarouselComponent 
                Images="car.Images"
                Title="Manual Carousel"
                EnableScrollToggle="true" />
        </section>

        <section class="carousel-section">
            <CarouselComponent 
                Images="car.Images"
                Title="Auto Carousel"
                EnableAutoScroll="true"
                AutoScrollInterval="3000" />
        </section>

        <section class="carousel-section">
            <CarouselComponent 
                Images="car.Images"
                Title="Zoom Carousel"
                EnableZoom="true"
                MaxZoom="3" />
        </section>
    </div>
}

@code {
    public Car car { get; set; } = new Car() { Images = new List<string>() };

    protected override void OnInitialized()
    {
        for (var i = 0; i <= 12; i++)
            car.Images.Add($"/Assets/Carousel/GT3-{i}.webp");
    }
}

<style>
    .carousel-gallery {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .carousel-section {
        margin-bottom: 4rem;
    }

    .carousel-section h2 {
        color: #333;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        text-align: center;
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        margin: 2rem 0;
        font-size: 2.5rem;
    }
    /* Gallery Layout */
.carousel-gallery {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.carousel-section {
  margin-bottom: 4rem;
  position: relative;
}

.carousel-section h2 {
  position: absolute;
  top: 1rem;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 1.5rem;
  text-align: center;
  z-index: 10;
  margin: 0;
  padding: 0.5rem 1.5rem;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 2rem;
  backdrop-filter: blur(4px);
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

/* Carousel Container */
.carousel-container {
  position: relative;
  max-width: 800px;
  margin: 2rem auto;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

/* Navigation Buttons */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.4);
  border: none;
  color: white;
  font-size: 2rem;
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 50%;
  cursor: pointer;
  z-index: 10;
  opacity: 0;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.nav-button.prev {
  left: 1rem;
}
.nav-button.next {
  right: 1rem;
}

.carousel-container:hover .nav-button {
  opacity: 1;
}

.nav-button:hover {
  background: rgba(0, 0, 0, 0.6);
  transform: translateY(-50%) scale(1.1);
}

/* Controls Overlay */
.carousel-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1.5rem;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 5;
}

.carousel-title {
  color: white;
  margin: 0;
  font-size: 1.25rem;
  font-weight: 500;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
}

/* Control Buttons */
.carousel-buttons {
  display: flex;
  gap: 0.75rem;
}

.toggle-button {
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 1.5rem;
  cursor: pointer;
  font-size: 0.9rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
}

.toggle-button:hover {
  background: rgba(0, 0, 0, 0.7);
  transform: translateY(-1px);
}

.toggle-button:active {
  transform: translateY(0);
}

/* Carousel Content */
.carousel {
  display: flex;
  overflow: hidden;
}

.carousel-item {
  flex: 0 0 100%;
  display: none;
  position: relative;
}

.carousel-item.active {
  display: block;
}

.carousel-item img {
  width: 100%;
  height: 500px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

/* Responsive Design */
@@media (max-width: 768px) {
  .carousel-section h2 {
    font-size: 1.2rem;
    padding: 0.4rem 1rem;
  }

  .carousel-container {
    margin: 1rem;
  }

  .carousel-item img {
    height: 300px;
  }

  .nav-button {
    width: 2.5rem;
    height: 2.5rem;
    font-size: 1.5rem;
  }

  .carousel-controls {
    padding: 1rem;
  }

  .carousel-title {
    font-size: 1rem;
  }

  .toggle-button {
    padding: 0.4rem 0.8rem;
    font-size: 0.8rem;
  }
}

/* Page Title */
h1 {
  text-align: center;
  color: #2c3e50;
  margin: 2rem 0;
  font-size: 2.5rem;
  font-weight: 600;
}

</style>