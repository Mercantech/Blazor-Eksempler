@page "/bootstrap/pricing"

<h1>Pricing</h1>
<div class="container py-3">
    <header>
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal">Priser</h1>
            <p class="fs-5 text-muted">Hurtigt bygget priseksempel med Bootstrap pricing component. Dette er en demo der viser forskellige prisplaner.</p>
        </div>
    </header>

    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Gratis</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">0 kr<small class="text-muted fw-light">/md</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>10 brugere inkluderet</li>
                            <li>2 GB lager</li>
                            <li>Email support</li>
                            <li>Adgang til hjælpecenter</li>
                        </ul>
                        <button type="button" class="w-100 btn btn-lg btn-outline-primary">Tilmeld gratis</button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Pro</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">150 kr<small class="text-muted fw-light">/md</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>20 brugere inkluderet</li>
                            <li>10 GB lager</li>
                            <li>Prioriteret email support</li>
                            <li>Adgang til hjælpecenter</li>
                        </ul>
                        <button type="button" class="w-100 btn btn-lg btn-primary">Kom i gang</button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm border-primary">
                    <div class="card-header py-3 text-white bg-primary border-primary">
                        <h4 class="my-0 fw-normal">Enterprise</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">500 kr<small class="text-muted fw-light">/md</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>30 brugere inkluderet</li>
                            <li>15 GB lager</li>
                            <li>Telefon og email support</li>
                            <li>Adgang til hjælpecenter</li>
                        </ul>
                        <button type="button" class="w-100 btn btn-lg btn-primary">Kontakt os</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
